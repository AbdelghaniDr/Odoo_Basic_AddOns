<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record id="group_animal_pet_assistant" model="res.groups">
            <field name="name">Pets assistant</field>
        </record>

        <record id="group_animal_pet_manager" model="res.groups">
            <field name="name">Pets manager</field>
            <field name="implied_ids" eval="[(4, ref('security_demo.group_animal_pet_assistant'))]"/>
        </record>

        <record id="group_animal_pet_user" model="res.groups">
            <field name="name">Pets user</field>
        </record>

        <record model="ir.rule" id="animal_pet_assistant_rule">
            <field name="name">Personal animal</field>
            <field name="model_id" ref="model_animal_pet"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="groups" eval="[(4, ref('security_demo.group_animal_pet_assistant'))]"/>
        </record>

        <record model="ir.rule" id="animal_pet_manager_rule">
            <field name="name">Manager animal</field>
            <field name="model_id" ref="model_animal_pet"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('security_demo.group_animal_pet_manager'))]"/>
        </record>

    </data>
</openerp>
