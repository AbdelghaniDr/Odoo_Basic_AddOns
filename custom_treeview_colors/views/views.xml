    <!--
    <menuitem name="Menu 1" id="custom_treeview_colors.menu_1" parent="custom_treeview_colors.menu_root"/>
    <menuitem name="Menu 2" id="custom_treeview_colors.menu_2" parent="custom_treeview_colors.menu_root"/>
    -->
    <!-- actions -->
    <!--
    <menuitem name="List" id="custom_treeview_colors.menu_1_list" parent="custom_treeview_colors.menu_1"
